<?xml version="1.0"?>  
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>  
    <class name="com.practice.data304.Student" table="student">  
        <!--设置主键的增长方式-->
        <id name="id">  
            <generator class="increment"/>  
        </id>  
       <!--设置表中属性-->
        <property name="name"/>  
        <property name="localAddress"/>  
        <property name="age"/>  
        <property name="date"/>  
    </class>  
</hibernate-mapping> 